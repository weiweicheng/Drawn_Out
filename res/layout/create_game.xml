<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
>
    <TextView
            android:id="@+id/gameIdMessage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="55dp"
    />
    <TextView
            android:id="@+id/numOfPlayers"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Current number of players waiting: 0"
            android:textSize="25dp"
    />
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="At least two other players are needed to start a game."
            android:visibility="invisible"
            android:id="@+id/minPlayerMessage"
    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Game"
            android:onClick="startGame"
            android:clickable="false"
            android:visibility="invisible"
            android:id="@+id/startGameButton" android:layout_gravity="center_horizontal"/>

</LinearLayout>

